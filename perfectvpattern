package patternproblems;

public class vpattern2 
{
public static void main(String [] args)
{
int n=10;
for(int i=1;i<=n;i++)
{
for(int j=1;j<=n*2;j++)
{
if(i==j || j==n*2-1-i+1)
{
System.out.print("&");
}
else
{
System.out.print(" ");	
}
}
System.out.println();
}

}
}


output
&                 & 
 &               &  
  &             &   
   &           &    
    &         &     
     &       &      
      &     &       
       &   &        
        & &         
         &          
