package patternproblems;

public class pattern4 
{
public static void main(String [] args)
{
for(int i =0;i<=4;i++)
{
for(int j=3;j>=i;j--)
{
System.out.print(" ");	
}
for(int k =1;k<=i;k++)
{
	System.out.print("*");
}
System.out.println();
}



for(int q=1;q<=4;q++)
{
for(int w=2;w<=q;w++)
{
	System.out.print(" ");
}
for(int e=4;e>=q;e--)
{
	System.out.print("*");
}
System.out.println();
}

}
}


output
    
   *
  **
 ***
****
****
 ***
  **
   *
