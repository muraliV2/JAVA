package patternproblems;

public class upsidev 
{
	public static void main(String [] args)
	{
	int n =15;
   for(int i=1;i<=n;i++)
   {
	   for(int j=1;j<=n*2;j++)
	   {
		   if(j== n-i+1 || j==n+i-1)
		   {
			   System.out.print("*");
		   }
		   else
		   {
			   System.out.print(" ");
			   
		   }
		   
	   }
	   System.out.println();
   }
}
}

output

